{
  "name": "node-filesystem",
  "version": "1.0.0-beta.3",
  "description": "A node filesystem manager",
  "main": "index.js",
  "repository": "git@github.com:beautybrands/node-filesystem.git",
  "author": "Piero Giusti <pierophp@gmail.com>",
  "license": "MIT",
  "keywords": [
    "node",
    "file",
    "filesystem",
    "s3",
    "flysystem"
  ],
  "engines": {
    "node": ">=14.0"
  },
  "scripts": {
    "build": "tsc",
    "test": "nyc mocha -A --opts ./mocha.opts --require ts-node/register -r tsconfig-paths/register",
    "test:clear": "clear &&  yarn test",
    "test:watch": "nodemon --exec yarn test:clear",
    "npm:publish": "yarn build && cp package.json dist/ && cp README.md dist/  && cd dist/ && npm publish --tag beta",
    "coverage": "cd coverage && python -m SimpleHTTPServer 8182"
  },
  "dependencies": {
    "@aws-sdk/client-s3": "^3.131.0",
    "@google-cloud/storage": "^6.4.1",
    "fs-extra": "^4.0.3",
    "lodash": "^4.17.21",
    "ltrim": "^1.0.0",
    "mime": "^2.3.1",
    "node-dir": "^0.1.17",
    "rtrim": "^1.0.0"
  },
  "devDependencies": {
    "@types/chai": "^4.0.5",
    "@types/lodash": "^4.14.182",
    "@types/mocha": "^2.2.44",
    "@types/node": "^18.7.6",
    "chai": "^4.2.0",
    "dotenv": "^16.0.1",
    "mocha": "^6.0.2",
    "nodemon": "^2.0.19",
    "nyc": "^11.3.0",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^2.4.0",
    "tslint": "^5.8.0",
    "typescript": "^4.7.4"
  },
  "nyc": {
    "include": [
      "src/*.ts",
      "src/**/*.ts"
    ],
    "exclude": [
      "docker"
    ],
    "extension": [
      ".ts"
    ],
    "reporter": [
      "html",
      "lcovonly",
      "text-summary"
    ],
    "all": true
  }
}
